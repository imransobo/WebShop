<!DOCTYPE html>
<html>
  <head>
    <title>WebShop || Profil</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <link rel='stylesheet' href='/stylesheets/kupac-profil.css' />
      <link rel="icon" href="/images/favicon.ico">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
      <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  </head>

  <body>




    <div class="container mt-5">
        <div class="row d-flex justify-content-center">
            <div class="col-md-8">
                <%for(let i=0; i<podaci.length; i++) { %>
                <div class="card p-3 py-4">
                    <% if(podaci[i].profilna === "" || podaci[i].profilna === null) { %>
                        <div class="text-center"> <img src="https://i.imgur.com/bDLhJiP.jpg" width="100" class="rounded-circle"></div>
                    <% } %>
                    <div class="text-center"> <img src="/upload/<%= podaci[i].profilna_slika %>" width="100" class="rounded-circle">

                    <div class="text-center mt-3">
                        <h5 style="text-align: center;">
                            <form action="/kupac/uploadProfilna" method="post" enctype="multipart/form-data">
                                <span class="p-1 "><input class="btn" style="padding-left: 100px;" type="file" name="slika" required></span>
                                <span class="p-1 "><input hidden="hidden" name="kupac" value="<%= podaci[i].username_kupac %>"></span>
                                <br>
                                <input type="submit" style="margin-bottom: 10px;" class="btn btn-dark" id="dugme" value="Uploadaj">
                            </form>
                        <span class="p-1 px-4" style="font-weight: bold;"><%= podaci[i].username_kupac %></span>
                        <h5 class="mt-2 mb-0"></h5> <span><%= podaci[i].ime_kupac + ' ' + podaci[i].prezime_kupac%></span>
                        <h5 class="mt-2 mb-0"></h5> <span><%= podaci[i].adresa_kupac %></span>
                        <h5 class="mt-2 mb-0"></h5> <span><%= podaci[i].telefon_kupac %></span>
                        <div class="buttons">
                            <form class="tekst" action="/kupac/urediProfil" method="get">
                                <input type="submit" class="btn btn-dark px-4" id="dugme" value="Uredi podatke">
                            </form>
                            <form class="tekst" action="/kupac/promijeniSifru" method="get">
                                <input class="btn btn-dark px-4 " type="submit" id="dugme" value="Promijeni Å¡ifru">
                            </form>
                        </div>
                    </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>





















  </body>
</html>
