<!DOCTYPE html>
<html>
  <head>
    <title>WebShop || Promijeni šifru</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <link rel='stylesheet' href='/stylesheets/kupac-profil.css' />
      <link rel="icon" href="/images/favicon.ico">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

  </head>

  <body>

  <script>
      function toggleVisibility() {
          var x1 = document.getElementById('tekst1');
          var x2 = document.getElementById('tekst2');
          var x3 = document.getElementById('tekst3');

          if (x1.type === "password" || x2.type === "password" ||x3.type === "password") {
              x1.type = "text";
              x2.type = "text";
              x3.type = "text";
          } else {
              x1.type = "password";
              x2.type = "password";
              x3.type = "password";
          }
      }
  </script>


    <div class="login">
        <form id="login-forma" action="/kupac/passwordUpdate" method="POST">
            <h5 id="forma-naslov">Uredite podatke</h5>
            <% if(typeof err != 'undefined') { %>
                <% for(let i=0; i<err.length; i++) { %>
                    <li><%= err[i].poruka %></li>
                <% } %>
            <% } %>
            <br>
            <div class="form-group">
                <input type="password" class="form-control tekst" id="tekst1" name="stara" placeholder="Stara šifra" >
            </div>
            <br>
            <div class="form-group">
                <input type="password" class="form-control tekst" id="tekst2" name="nova" placeholder="Nova šifra" >
            </div>
            <br>
            <div class="form-group">
                <input type="password" class="form-control tekst" id="tekst3" name="nova_ponovo" placeholder="Ponovi novu šifru" >
            </div>
            <div class="form-group">
                <input type="checkbox" onclick="toggleVisibility()" id="toggleV">Prikaži password
            </div>

            <button type="submit" class="btn btn-dark" id="dugme">Promijeni</button>
        </form>
    </div>








  </body>
</html>
