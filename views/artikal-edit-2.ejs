<!DOCTYPE html>
<html>
  <head>
    <title>WebShop || Uredi artikal</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <link rel='stylesheet' href='/stylesheets/shop-artikal-edit.css' />
      <link rel="icon" href="/images/favicon.ico">
      <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
      <link
              rel="stylesheet"
              href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"
      />

      <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  </head>
  <body>


  <div class="login">
      <form id="login-forma" action="/edituj" method="POST">
          <h5 id="forma-naslov">Uredite podatke</h5>
          <% for(let i=0; i<podaci.length; i++) { %>
              <div class="form-group">
                  <input type="hidden" id="tekst" class="form-control" name="idArtikla" value="<%= podaci[i].id_artikla %>">
              </div>
              <br>
              <div class="form-group">
                  <input type="text" name="imeArtikla" class="form-control" value="<%= podaci[i].naziv %>">
              </div>
              <br>
              <div class="form-group">
                  <input type="number" name="kolicina" class="form-control" value="<%= podaci[i].kolicina%>">
              </div>
              <br>
              <div class="form-group">
                  <input type="number" name="cijena" class="form-control" value="<%= podaci[i].cijena%>">
              </div>
              <br>
              <div class="form-group">
                  <input type="text" name="opis" class="form-control" value="<%= podaci[i].opis%>">
              </div>
              <br>
              <button type="submit" class="btn btn-dark" id="dugme">Spasi</button>
          <% } %>
      </form>
  </div>



  <div class="product" style="display: none;">
      <%for(let i=0; i<podaci.length; i++) { %>
          <img class="card_image" id="slikaArtikla" src="/upload/<%= podaci[i].slika %>" alt="Slika artikla">
          <form action="/edituj" method="post" encType="multipart/form-data">
              <br>
              <div class="form-group">
                  <input type="hidden" name="idArtikla" value="<%= podaci[i].id_artikla %>">
              </div>
              <div class="form-group">
                  <input type="text" name="imeArtikla" value="<%= podaci[i].naziv %>">
              </div>
              <div class="form-group">
                  <input type="number" name="kolicina" value="<%= podaci[i].kolicina%>">
              </div>
              <div class="form-group">
                  <input type="number" name="cijena" value="<%= podaci[i].cijena%>">
              </div>
              <div class="form-group">
                  <input type="text" name="opis" value="<%= podaci[i].opis%>">
              </div>
              <div class="form-group">
                  <input type="file" class="form-control" id="slikaArtikla" name="slikaArtikla"  accept="image/*" placeholder="Slika artikla">
              </div>
              <div class="form-group">
                  <input type="submit" name="spasi" value="Spasi promjene">
              </div>
          </form>
      <% } %>
  </div>


  </body>
</html>
