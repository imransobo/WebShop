<!DOCTYPE html>
<html>
  <head>
    <title>WebShop || Uredi profil</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <link rel='stylesheet' href='/stylesheets/shop-profil.css' />
    <link rel="icon" href="/images/favicon.ico">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

  </head>
  <body>



  <div class="login">
    <form id="login-forma" action="/urediProfil" method="POST">
      <h5 id="forma-naslov">Uredite podatke</h5>
      <% for(let i=0; i<podaci.length; i++) { %>
        <div class="form-group">
          <input type="hidden" name="id" value="<%=podaci[i].id_trg %>">
        </div>
        <br>
        <div class="form-group">
          <input type="text" class="form-control" id="" name="naziv" value="<%= podaci[i].naziv_trg %>" >
        </div>
        <br>
        <div class="form-group">
          <input type="text" class="form-control" id="" name="broj" value="<%= podaci[i].telefon_trg %>" >
        </div>
        <br>
        <div class="form-group">
          <input type="text" class="form-control" id="" name="sjediste" value="<%= podaci[i].sjediste_trg %>" >
        </div>
        <br>
        <button type="submit" class="btn btn-dark" id="dugme">Spasi</button>
      <% } %>
    </form>
  </div>




  </body>
</html>
