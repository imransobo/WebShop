<html>
  <head>
    <title>WebShop || Login</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <link rel='stylesheet' href='/stylesheets/login.css' />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

  </head>
  <body>

  <script>
    function toggleVisibility() {
      var x1 = document.getElementById('password');

      if (x1.type === "password") {
        x1.type = "text";
      } else {
        x1.type = "password";
      }
    }
  </script>

  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <a class="navbar-brand" href="#">WebShop</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item active">
          <a class="nav-link" href="/">Početna</a>
        </li>
      </ul>
    </div>
  </nav>

    <div class="container" id="welcome">
      <h2 id="welcome-naslov">Dobrodošli na WebShop</h2>
      <h3 id="welcome-pr">Prijavite se</h3>
    </div>

   <br>
    <br>

    <div class="login">
      <form id="login-forma" action="/kupacLogin" method="POST">
        <h5 id="forma-naslov">Ulogujte se</h5>
        <ul>
          <% if(messages.error) { %>
            <li> <%= messages.error %></li>
          <% }%>
        </ul>
        <div class="form-group">
          <input type="email" class="form-control" id="email" name="email" placeholder="Username">
        </div>
        <br>
        <div class="form-group">
          <input type="password" class="form-control" id="password" name="password" placeholder="Password">
        </div>
        <div class="form-group">
          <input type="checkbox" onclick="toggleVisibility()" id="toggleV">Prikaži password
        </div>
        <br>
        <button type="submit" class="btn btn-dark" id="dugme">Submit</button>
      </form>
    </div>



  </body>
</html>
