<!DOCTYPE html>
<html>
  <head>
    <title>WebShop || Korpa</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="icon" href="/images/favicon.ico">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <a class="navbar-brand" href="#">WebShop</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item active">
            <a class="nav-link" href="/kupac/dashboard/ <%= mail %>">Dashboard</a>
          </li>
          <li class="nav-item active">
            <a class="nav-link" href="/kupac/korpa">Korpa</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/logout">Logout</a>
          </li>
        </ul>
      </div>
    </nav>


    <div class="container" id="welcome">
      <h1>Dobrodošli na WebShop</h1>
      <br>
      <h2>Vaše narudžbe</h2>
    </div>


    <table id="kupacKorpa" class="table table-hover table-dark">
      <thead>
      <tr>
        <th scope="col">ID narudžbe</th>
        <th scope="col">ID kupca</th>
        <th scope="col">Naziv artikla</th>
        <th scope="col">Cijena artikla</th>
        <th scope="col">Količina</th>
        <th scope="col">Status narudžbe</th>
        <th scope="col"></th>
      </tr>
      </thead>
      <tbody>
      <% for(let i=0; i<podaci.length; i++) { %>
      <tr>
        <form action="/obrisiNarudzbu" method="post">
            <th scope="row"><%= podaci[i].id_narudzbe %></th>
            <td><%= podaci[i].id_kupac %></td>
            <td><%= podaci[i].naziv %></td>
            <td><%= podaci[i].cijena %></td>
            <td><%= podaci[i].kolicina %></td>
            <td><%= podaci[i].status %></td>
            <input hidden="hidden" type="number" name="idNarudzbe" value="<%= podaci[i].id_narudzbe %>">
            <% if(podaci[i].status === 'cekanje') { %>
              <td><input type="submit"  class="btn btn-danger" value="Obriši narudžbu"></td>
            <% }  else { %>
              <td></td>
            <% }%>
        </form>
      </tr>
      <% } %>
      </tbody>
    </table>










  </body>
</html>
